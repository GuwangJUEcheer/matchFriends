{
  "compilerOptions": {
    "target": "ES2018",          // 或更高版本，如 "ES2020" 或 "ESNext"
    "lib": ["ES2018", "DOM"],    // 支持 ES 和浏览器的 DOM
    "module": "ESNext",          // 使用 ES 模块       // 开启严格模式
    "moduleResolution": "Node", // 使用 Node 模块解析方式
    "skipLibCheck": true,       // 跳过库的类型检查
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue", "src/**/*.d.ts","src/**/*.js"],
  "files": [],
  "references": [
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
